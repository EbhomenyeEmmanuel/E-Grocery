<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <ImageView
        android:id="@+id/ivfoodIcon"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_margin="@dimen/normal_spacing"
        android:contentDescription="@string/food_icon_for_menu"
        android:padding="@dimen/standard_spacing"
        android:src="@drawable/meat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvfoodName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/normal_spacing"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:background="@drawable/categories_text_bg"
        android:padding="@dimen/normal_spacing"
        android:text="Onions"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ivfoodIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>